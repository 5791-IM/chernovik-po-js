   –ù–∞–ø—Ä–∏–∫–ª–∞–¥:
const galleryCard = document.querySelector('.gallery-card');
 // –ó–∞–º—ñ–Ω—ñ—Ç—å –Ω–∞ —Å–µ–ª–µ–∫—Ç–æ—Ä –≤–∞—à–æ—ó –∫–∞—Ä—Ç–æ—á–∫–∏
const cardHeight = galleryCard.getBoundingClientRect().height;

 –í–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ –ø—Ä–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ.
  –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Å–≤–µ–¥–µ–Ω–∏—è –æ —á–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã—Ö –≤–æ–ø—Ä–æ—Å–∞—Ö.

–ü–ª–∞–≤–Ω–µ –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è —Å—Ç–æ—Ä—ñ–Ω–∫–∏:
 –ü—ñ—Å–ª—è –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –Ω–æ–≤–∏—Ö –¥–∞–Ω–∏—Ö –≤–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É–π—Ç–µ –º–µ—Ç–æ–¥ window.scrollBy,
  —â–æ–± –ø—Ä–æ–∫—Ä—É—Ç–∏—Ç–∏ —Å—Ç–æ—Ä—ñ–Ω–∫—É –Ω–∞ –¥–≤—ñ –≤–∏—Å–æ—Ç–∏ –∫–∞—Ä—Ç–æ—á–∫–∏ –≥–∞–ª–µ—Ä–µ—ó:

const loadMoreButton = document.getElementById('loadMoreButton');
 // –ó–∞–º—ñ–Ω—ñ—Ç—å –Ω–∞ –≤–∞—à—É –∫–Ω–æ–ø–∫—É "Load more"
loadMoreButton.addEventListener('click', async () => {
  // –í–∏–∫–æ–Ω–∞–π—Ç–µ –∑–∞–ø–∏—Ç –∑–∞ –Ω–æ–≤–∏–º–∏ –¥–∞–Ω–∏–º–∏
  const newData = await fetchData(); 
  // –ü—Ä–∏–ø—É—Å—Ç–∏–º–æ, —â–æ —Ü–µ –≤–∞—à–∞ —Ñ—É–Ω–∫—Ü—ñ—è –¥–ª—è –æ—Ç—Ä–∏–º–∞–Ω–Ω—è –¥–∞–Ω–∏—Ö

  // –î–æ–¥–∞–π—Ç–µ –Ω–æ–≤—ñ –¥–∞–Ω—ñ –¥–æ –≥–∞–ª–µ—Ä–µ—ó

  // –ü—Ä–æ–∫—Ä—É—Ç—ñ—Ç—å —Å—Ç–æ—Ä—ñ–Ω–∫—É –Ω–∞ –¥–≤—ñ –≤–∏—Å–æ—Ç–∏ –∫–∞—Ä—Ç–æ—á–∫–∏ –≥–∞–ª–µ—Ä–µ—ó
  window.scrollBy(0, 2 * cardHeight);
});

 –í–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ –ø—Ä–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ.
  –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Å–≤–µ–¥–µ–Ω–∏—è –æ —á–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã—Ö –≤–æ–ø—Ä–æ—Å–∞—Ö.

–Ü–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è:
 –ü–µ—Ä–µ–Ω–µ—Å—ñ—Ç—å —ñ–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –ø—ñ–¥ –∫–Ω–æ–ø–∫—É ‚ÄúLoad more‚Äù,
  —â–æ–± –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á—ñ –±–∞—á–∏–ª–∏, —â–æ –∑–∞–ø–∏—Ç –≤–∏–∫–æ–Ω—É—î—Ç—å—Å—è.
–¢–∞–∫–∏–º —á–∏–Ω–æ–º,
 –≤–∏ –∑–º–æ–∂–µ—Ç–µ –∑–∞–±–µ–∑–ø–µ—á–∏—Ç–∏ –ø–ª–∞–≤–Ω–µ –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è —Å—Ç–æ—Ä—ñ–Ω–∫–∏
  –ø—ñ—Å–ª—è –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –Ω–æ–≤–∏—Ö –¥–∞–Ω–∏—Ö.  üöÄ

  =============================================================

  –Ø–∫ –º–æ–∂–Ω–∞ –∑—Ä–æ–±–∏—Ç–∏ –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è —Å—Ç–æ—Ä—ñ–Ω–∫–∏ –±—ñ–ª—å—à –ø–ª–∞–≤–Ω–∏–º?

–ó–≤—ñ—Å–Ω–æ!
 –î–ª—è –∑—Ä–æ–±–ª–µ–Ω–Ω—è –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è —Å—Ç–æ—Ä—ñ–Ω–∫–∏ –±—ñ–ª—å—à –ø–ª–∞–≤–Ω–∏–º
  –≤–∏ –º–æ–∂–µ—Ç–µ –≤–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É–≤–∞—Ç–∏ –ø–ª–∞–≤–Ω–µ –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è (smooth scroll).

   –û—Å—å —è–∫ –≤–∏ –º–æ–∂–µ—Ç–µ —Ü–µ –∑—Ä–æ–±–∏—Ç–∏:

–û—Ç—Ä–∏–º–∞–Ω–Ω—è –≤–∏—Å–æ—Ç–∏ –∫–∞—Ä—Ç–æ—á–∫–∏ –≥–∞–ª–µ—Ä–µ—ó:
 –í–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É–π—Ç–µ —Ñ—É–Ω–∫—Ü—ñ—é getBoundingClientRect,
  —â–æ–± –æ—Ç—Ä–∏–º–∞—Ç–∏ –≤–∏—Å–æ—Ç—É –æ–¥–Ω—ñ—î—ó –∫–∞—Ä—Ç–æ—á–∫–∏ –≥–∞–ª–µ—Ä–µ—ó.

   –ù–∞–ø—Ä–∏–∫–ª–∞–¥:
const galleryCard = document.querySelector('.gallery-card'); // –ó–∞–º—ñ–Ω—ñ—Ç—å –Ω–∞ —Å–µ–ª–µ–∫—Ç–æ—Ä –≤–∞—à–æ—ó –∫–∞—Ä—Ç–æ—á–∫–∏
const cardHeight = galleryCard.getBoundingClientRect().height;

 –í–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ –ø—Ä–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ.
  –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Å–≤–µ–¥–µ–Ω–∏—è –æ —á–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã—Ö –≤–æ–ø—Ä–æ—Å–∞—Ö.

–ü–ª–∞–≤–Ω–µ –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è —Å—Ç–æ—Ä—ñ–Ω–∫–∏:
 –ü—ñ—Å–ª—è –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –Ω–æ–≤–∏—Ö –¥–∞–Ω–∏—Ö –≤–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É–π—Ç–µ –º–µ—Ç–æ–¥ window.scrollBy,
  —â–æ–± –ø—Ä–æ–∫—Ä—É—Ç–∏—Ç–∏ —Å—Ç–æ—Ä—ñ–Ω–∫—É –Ω–∞ –¥–≤—ñ –≤–∏—Å–æ—Ç–∏ –∫–∞—Ä—Ç–æ—á–∫–∏ –≥–∞–ª–µ—Ä–µ—ó:

const loadMoreButton = document.getElementById('loadMoreButton');
 // –ó–∞–º—ñ–Ω—ñ—Ç—å –Ω–∞ –≤–∞—à—É –∫–Ω–æ–ø–∫—É "Load more"
loadMoreButton.addEventListener('click', async () => {
  // –í–∏–∫–æ–Ω–∞–π—Ç–µ –∑–∞–ø–∏—Ç –∑–∞ –Ω–æ–≤–∏–º–∏ –¥–∞–Ω–∏–º–∏
  const newData = await fetchData();
   // –ü—Ä–∏–ø—É—Å—Ç–∏–º–æ, —â–æ —Ü–µ –≤–∞—à–∞ —Ñ—É–Ω–∫—Ü—ñ—è –¥–ª—è –æ—Ç—Ä–∏–º–∞–Ω–Ω—è –¥–∞–Ω–∏—Ö

  // –î–æ–¥–∞–π—Ç–µ –Ω–æ–≤—ñ –¥–∞–Ω—ñ –¥–æ –≥–∞–ª–µ—Ä–µ—ó

  // –ü—Ä–æ–∫—Ä—É—Ç—ñ—Ç—å —Å—Ç–æ—Ä—ñ–Ω–∫—É –Ω–∞ –¥–≤—ñ –≤–∏—Å–æ—Ç–∏ –∫–∞—Ä—Ç–æ—á–∫–∏ –≥–∞–ª–µ—Ä–µ—ó –∑ –ø–ª–∞–≤–Ω—ñ—Å—Ç—é
  window.scrollBy({ top: cardHeight * 2, behavior: 'smooth' });
});

 –í–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ –ø—Ä–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ.
  –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Å–≤–µ–¥–µ–Ω–∏—è –æ —á–∞—Å—Ç–æ –∑–∞–¥–∞–≤–∞–µ–º—ã—Ö –≤–æ–ø—Ä–æ—Å–∞—Ö.

–Ü–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è:
 –ü–µ—Ä–µ–Ω–µ—Å—ñ—Ç—å —ñ–Ω–¥–∏–∫–∞—Ç–æ—Ä –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –ø—ñ–¥ –∫–Ω–æ–ø–∫—É ‚ÄúLoad more‚Äù,
  —â–æ–± –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á—ñ –±–∞—á–∏–ª–∏, —â–æ –∑–∞–ø–∏—Ç –≤–∏–∫–æ–Ω—É—î—Ç—å—Å—è.
–¢–∞–∫–∏–º —á–∏–Ω–æ–º,
 –≤–∏ –∑–º–æ–∂–µ—Ç–µ –∑–∞–±–µ–∑–ø–µ—á–∏—Ç–∏ –ø–ª–∞–≤–Ω–µ –ø—Ä–æ–∫—Ä—É—á—É–≤–∞–Ω–Ω—è —Å—Ç–æ—Ä—ñ–Ω–∫–∏ –ø—ñ—Å–ª—è –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è –Ω–æ–≤–∏—Ö –¥–∞–Ω–∏—Ö.

